#!/usr/bin/env bash
echo "#################################"
echo "Start xelphlinux-final"
echo "#################################"

echo "Permissions of important folders"
echo "#################################"
chmod 750 /etc/sudoers.d
chmod 750 /etc/polkit-1/rules.d
chgrp polkitd /etc/polkit-1/rules.d

echo "Copy /etc/skel to /root"
echo "#################################"
cp -aT /etc/skel/ /root/

echo "Cleanup autologin root"
echo "#################################"
rm -rf /etc/systemd/system/getty@tty1.service.d

echo "Cleanup original files"
echo "#################################"
rm -f /etc/sudoers.d/g_wheel
rm -rf /usr/share/backgrounds/xfce
rm -f /etc/polkit-1/rules.d/49-nopasswd_global.rules
rm -f /etc/polkit-1/rules.d/49-nopasswd-calamares.rules
rm -r /etc/systemd/system/etc-pacman.d-gnupg.mount
rm /root/{.automated_script.sh,.zlogin}
rm /usr/local/bin/installsys

echo "Permission of root"
echo "#################################"
chmod -v 750 /root

echo "#################################"
echo "End arcolinux-final"
echo "#################################"
rm /usr/local/bin/xelphlinux-final
